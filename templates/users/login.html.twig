{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
    <div class="container mt-4">

        {% if errors %}
        <div class="alert alert-danger">
            {{ errors.messageKey | trans(errors.messageData, 'security') }}
        </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" class="form-control" id="username" name="_username">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password">
            </div>
            <div class="row justify-content-end">
                <button class="btn justify-self-end" type="submit">
                    <img src="/images/management/Validate.svg" alt="validation">Se connecter
                </button>
            </div>
        </form>
    </div>
{% endblock %}